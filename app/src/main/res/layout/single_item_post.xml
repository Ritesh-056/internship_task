<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/app_padding"
    android:layout_margin="8dp"
    android:background="@drawable/single_item_boundary"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relativeOne"
        android:layout_marginRight="8dp"
        android:layout_width="40dp"
        android:background="@drawable/id_circle_boundary"
        android:layout_height="40dp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/post_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:padding="8dp"
            android:textSize="@dimen/app_text"
            android:textColor="#fff"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_toEndOf="@id/relativeOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Title"
            android:textColor="#252121"
            android:textSize="@dimen/app_text" />


        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:maxLines="1"
            android:text="Body"
            android:textColor="#635C5C"
            android:textSize="@dimen/app_text" />
    </RelativeLayout>



</RelativeLayout>